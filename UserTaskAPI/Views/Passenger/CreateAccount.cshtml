@model CabBooking.Models.UserModel

@{
    ViewData["Title"] = "CreateAccount";
}

<h1>CreateAccount</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trips" class="control-label"></label>
                <input asp-for="Trips" class="form-control" />
                <span asp-validation-for="Trips" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAccountCreated" class="control-label"></label>
                <input asp-for="DateAccountCreated" class="form-control" />
                <span asp-validation-for="DateAccountCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAccountDeactivated" class="control-label"></label>
                <input asp-for="DateAccountDeactivated" class="form-control" />
                <span asp-validation-for="DateAccountDeactivated" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AccountActive" /> @Html.DisplayNameFor(model => model.AccountActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AccountSuspended" /> @Html.DisplayNameFor(model => model.AccountSuspended)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
