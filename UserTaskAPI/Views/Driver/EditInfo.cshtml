@model CabBooking.Models.DriverModel

@{
    ViewData["Title"] = "UpdateInfo";
}

<h1>View</h1>

<h4>DriverModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Driver" asp-action="UpdateProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarID" class="control-label">  @Html.DisplayNameFor(model => model.CarID) </label>
                @Html.EditorFor(model => model.CarID)
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> @Html.DisplayNameFor(model => model.Name)</label>
                @Html.EditorFor(model => model.Name)
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"> @Html.DisplayNameFor(model => model.Surname)</label>
                @Html.EditorFor(model => model.Surname)
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
           <input class="text-box single-line" id="ID" name="ID" type="hidden" value=@Model?.ID />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

