@model CabBooking.Models.DriverModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>DriverModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View" action="UpdateProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarID" class="control-label">  @Html.DisplayNameFor(model => model.CarID) </label>
                <input asp-for="CarID" class="form-control" placeholder="@Model?.CarID" />
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> @Html.DisplayNameFor(model => model.Name)</label>
                <input asp-for="Name" class="form-control" placeholder="@Model?.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"> @Html.DisplayNameFor(model => model.Surname)</label>
                <input asp-for="Surname" class="form-control" placeholder="@Model?.Surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
